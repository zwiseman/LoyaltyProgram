@page
@using LoyaltyProgram.Models
@model RegisterModel
@{ ViewData["Title"] = "Register"; }

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber">Phone Number <i>(optional)</i></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <h5>Security Question</h5>
            <div class="form-group">
                <label asp-for="Input.SecurityQuestion"></label>
                @Html.DropDownList("Input.SecurityQuestion",
                          SecurityQuestions.GetSecurityQuestions(),
                          new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Input.SecurityAnswer"></label>
                <input asp-for="Input.SecurityAnswer" class="form-control" />
                <span asp-validation-for="Input.SecurityAnswer" class="text-danger"></span>
            </div>
            <h5>Communication Preferences</h5>
            <div class="form-check">
                @Html.CheckBox("Input.SweepstakesEnrolled", true, new { @class = "form-check-input" })
                <label class="form-check-label" for="Input_SweepstakesEnrolled">
                    Yes, I would like to be enrolled in the Sweepstakes <a href="https://github.com/zwiseman/LoyaltyProgram">See Sweepstakes rules</a>.
                </label>
            </div>
            <div class="form-check">
                @Html.CheckBox("Input.EmailNotifications", true, new { @class = "form-check-input" })
                <label class="form-check-label" for="Input_EmailNotifications">
                    Yes, I would like to receive emails about special promotions or sales.
                </label>
            </div>
            <p><i>Note: you can opt out of transational emails</i></p>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
            <p>By clicking this button, I agree to the <a href="https://github.com/zwiseman/LoyaltyProgram">Terms of Use</a> and <a href="https://github.com/zwiseman/LoyaltyProgram">Privacy Policy</a></p>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2 border">
        <section>
            <h4>With an Account you can register and manage your gift cards and participate in sweepstakes</h4>
            <hr />
            <ul>
                <li>Register any Gift Card.</li>
                <li>Transfer money between cards.</li>
                <li>Track your rewards</li>
                <li>Automatically reload your Card balance.</li>
            </ul>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
